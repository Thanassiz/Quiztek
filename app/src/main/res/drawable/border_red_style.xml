<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>

            <!-- Apply border around -->
            <stroke
                android:color="@android:color/holo_red_light"
                android:width="4dp" />
            <!-- Apply padding to make image 4dp smaller -->
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>
</selector>