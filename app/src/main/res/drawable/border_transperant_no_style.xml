<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>

            <!-- Apply border around -->
            <stroke
                android:color="@android:color/transparent"
                android:width="4dp" />
            <!-- Apply padding around -->
            <padding
                android:top="4dp"
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"/>

        </shape>
    </item>

</selector>